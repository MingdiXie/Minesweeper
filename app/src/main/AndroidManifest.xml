<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csc207.gamecentre">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".general.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".slidingtiles.STStartingActivity" />
        <activity android:name=".slidingtiles.STGameActivity" />
        <activity android:name=".minesweeper.MSStartingActivity" />
        <activity android:name=".minesweeper.MSGameActivity" />
        <activity
            android:name=".general.SignUpActivity"
            android:label="@string/sign_up"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".general.GameLaunchCenterActivity"
            android:label="Game Launch Center"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".scoreboard.ScoreboardActivity"
            android:label="@string/scoreboard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".memorypuzzle.MPStartingActivity" />
        <activity android:name=".memorypuzzle.MPGameActivity"></activity>
    </application>

</manifest>